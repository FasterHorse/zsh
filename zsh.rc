. ~/.zsh/execution_timestamp.rc

local datetime='%D{m-d H:M:S}'
local userlocation='%n@%m:%~'
local currentstatus='%($..${RED}(%?%)${NORM} )'

autoload -U colors && colors

zstyle ':completion:*' menu select

function parse_git_branch {
  ref=$(git symbolic-ref HEAD 2> /dev/null) || return
  echo "("${ref#refs/heads/}") "
}

hostcolor=$(hostname | od | tr ' ' '\n' | awk '{total = total + $1}END{print (1 + (total % 5))}')
usercolor=$(whoami | od | tr ' ' '\n' | awk '{total = total + $1}END{print (1 + (total % 5))}')
function daycolor {
  echo $(date +'%d' | awk '{total = total + $1}END{print (1 + (total % 5))}')
}

setopt PROMPT_SUBST
PROMPT='%F{$(daycolor)}%D{%m-%d}%f %D{%H:%M:%S} %F{$usercolor}%n%f@%F{$hostcolor}%m%f:%. $(parse_git_branch)%(?.%F{green}$.%F{red}(%?%) $) %f'

eval "$(dircolors -b ~/.zsh/dircolors)"

. ~/.zsh/sufix_aliases.rc
. ~/.zsh/aliases.rc

. ~/.zsh/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
